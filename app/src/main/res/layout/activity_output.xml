<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.blogspot.infogabut.daftarmenucafe.OutputActivity">

    <TextView
        android:id="@+id/PesananAnda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Pesanan Anda"/>

    <TextView
        android:id="@+id/textOriginal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PesananAnda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/textMocha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textOriginal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textCappucino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMocha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textVanilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCappucino"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/terimakasih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textVanilla"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:text="Terima kasih atas" />

    <TextView
        android:id="@+id/pesanannya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/terimakasih"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Terima kasih atas" />
</RelativeLayout>
